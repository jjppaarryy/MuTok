{
  "name": "mutok-tiktok-autoposter",
  "private": true,
  "version": "0.1.0",
  "description": "MuTok TikTok Creator Center desktop app",
  "author": "MuTok",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "cd apps/web && PRISMA_CLIENT_ENGINE_TYPE=binary NEXT_DISABLE_TURBOPACK=1 next dev",
    "build": "cd apps/web && PRISMA_CLIENT_ENGINE_TYPE=binary next build",
    "start": "cd apps/web && PRISMA_CLIENT_ENGINE_TYPE=binary next start",
    "lint": "cd apps/web && next lint",
    "prisma:generate": "prisma generate --schema ./prisma/schema.prisma",
    "prisma:migrate": "prisma migrate dev --schema ./prisma/schema.prisma",
    "desktop:dev": "node apps/desktop/dev.js",
    "desktop:build": "npm run build && npx electron-builder"
  },
  "devDependencies": {
    "@types/luxon": "^3.7.1",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "prisma": "^6.8.0"
  },
  "dependencies": {
    "@prisma/client": "^6.8.0",
    "next": "^16.1.5",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "wait-on": "^9.0.3"
  },
  "main": "apps/desktop/main.js",
  "build": {
    "appId": "com.mutok.desktop",
    "productName": "MuTok",
    "asar": false,
    "directories": {
      "output": "dist"
    },
    "files": [
      "apps/desktop/**",
      "apps/web/.next/**",
      "apps/web/node_modules/next/**",
      "apps/web/public/**",
      "apps/web/package.json",
      "node_modules/**",
      "package.json",
      "prisma/**",
      "data/**"
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "/Users/jamesparry-jones/.cursor/projects/Users-jamesparry-jones-Documents-TikTok-Growth-Agent/assets/mutok-icon.png"
    }
  }
}
